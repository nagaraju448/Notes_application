<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.created_user.email %></td>
        <td><%= note.title %></td>
        <td><%= note.description %></td>
        <td><%= link_to 'Share', share_note_user_note_path(current_user, note) %></td>
        <td><%= link_to 'Show', user_note_path(current_user, note) %></td>
        <td><%= link_to 'Edit', edit_user_note_path(current_user, note) %></td>
        <td><%= link_to 'Destroy', user_note_path(current_user, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_user_note_path(current_user) %>
